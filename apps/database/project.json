{
  "name": "database",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/database/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/database",
        "main": "apps/database/src/index.ts",
        "tsConfig": "apps/database/tsconfig.json",
        "assets": ["apps/database/src/assets"]
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "database:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/database/jest.config.ts"
      }
    },
    "migrate": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "database:build",
        "script": "apps/database/src/migrations/run-migrations.ts"
      }
    },
    "seed": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "database:build",
        "script": "apps/database/src/seeds/run-seeds.ts"
      }
    },
    "init": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "database:build",
        "script": "apps/database/src/init/index.ts",
        "args": []
      }
    }
  },
  "tags": []
} 