# Database API Environment Variables
# Copy this file to .env and update the values

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://tenanta_user:tenanta_password@localhost:5432/tenanta
DATABASE_POOL_SIZE=10
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20

# Redis Configuration (Database API uses Database 0)
REDIS_URL=redis://:tenanta_redis_password@localhost:6379
REDIS_DB=0
REDIS_PREFIX=tenanta:database-api:
REDIS_USER=database-api
REDIS_PASSWORD=tenanta_redis_password

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/database-api.log

# API Configuration
API_VERSION=v1
API_PREFIX=/api
CORS_ORIGIN=http://localhost:3000

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Schema Management
SCHEMA_VALIDATION_ENABLED=true
SCHEMA_VERSIONING_ENABLED=true
MAX_SCHEMAS_PER_TENANT=50
MAX_TABLES_PER_SCHEMA=100

# WebSocket Configuration
WS_PORT=3002
WS_PATH=/ws 