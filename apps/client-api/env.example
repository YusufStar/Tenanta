# Client API Environment Variables
# Copy this file to .env and update the values

# Server Configuration
PORT=3003
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://tenanta_user:tenanta_password@localhost:5432/tenanta
DATABASE_POOL_SIZE=5
DATABASE_POOL_MIN=1
DATABASE_POOL_MAX=10

# Redis Configuration (Client API uses Database 1)
REDIS_URL=redis://:tenanta_redis_password@localhost:6379
REDIS_DB=1
REDIS_PREFIX=tenanta:client-api:
REDIS_USER=client-api
REDIS_PASSWORD=tenanta_redis_password

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/client-api.log

# API Configuration
API_VERSION=v1
API_PREFIX=/api
CORS_ORIGIN=http://localhost:3000

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Caching Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000
CACHE_ENABLED=true

# Proxy Configuration
UPSTREAM_API_URL=http://localhost:3001
UPSTREAM_TIMEOUT=5000 