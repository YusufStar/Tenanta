# Client Application Environment Variables
# Copy this file to .env and update the values

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3003
NEXT_PUBLIC_WS_URL=ws://localhost:3002

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration (for direct database access if needed)
DATABASE_URL=postgresql://tenanta_user:tenanta_password@localhost:5432/tenanta

# Redis Configuration (Client uses Database 2 for client-side caching)
REDIS_URL=redis://:tenanta_redis_password@localhost:6379
REDIS_DB=2
REDIS_PREFIX=tenanta:client:
REDIS_USER=client
REDIS_PASSWORD=tenanta_redis_password

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/client.log

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Client-specific Configuration
ENABLE_SSR=true
ENABLE_ANALYTICS=false
ENABLE_DEBUG_MODE=true

# Schema Management UI
SCHEMA_EDITOR_ENABLED=true
SCHEMA_VALIDATION_ENABLED=true
MAX_SCHEMA_NAME_LENGTH=100
MAX_TABLE_NAME_LENGTH=64 